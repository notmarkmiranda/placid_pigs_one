<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "New password" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <div class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <%= f.submit "Change my password", class: "btn btn-outline-primary btn-block" %>
      <% end %>

      <div class="devise-links-row">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
