<%= form_for @season do |f| %>
  <%= f.hidden_field :league_id, value: params[:league_id] %>
  <%= f.label :name, "Season Name" %>
  <%= f.text_field :name %>
  <%= f.label :start_date, "Start Date" %>
  <%= f.date_field :start_date %>
  <%= f.label :end_date, "End Date" %>
  <%= f.date_field :end_date %>
  <%= f.label :increment_lock, "Days in Betting Window" %>
  <%= f.text_field :increment_lock %>
  <%= f.label :offset %>
  <%= f.text_field :offset %>
  <%= f.submit "Create Season" %>
<% end %>
